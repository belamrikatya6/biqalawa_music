  <audio id="bg-music" loop>
    <source src="https://github.com/belamrikatya6/biqalawa_music/raw/main/music.mp3" type="audio/mpeg">
  </audio>

  <script>
    const music = document.getElementById("bg-music");

    // محاولة التشغيل التلقائي
    window.addEventListener('load', () => {
      music.play().catch(() => {
        // إذا رفض المتصفح، نحاول مجددًا بعد ثانية
        setTimeout(() => {
          music.play().catch(() => {});
        }, 1000);
      });
    });

    // بعض الهواتف تحتاج تفاعل أول
    document.body.addEventListener('touchstart', () => {
      music.play();
    }, { once: true });
  </script>
